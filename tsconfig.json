{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "declaration": false,
    "incremental": false,
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "jsx": "preserve",
    "jsxImportSource": "preact",
    "importsNotUsedAsValues": "error",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["src/utils/*"],
      "@workers/*": ["workers/*"]
    },
    "types": ["jest", "node"],
    "lib": ["DOM.Iterable"],
    "downlevelIteration": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
