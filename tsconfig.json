{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "declaration": false,
    "incremental": false,
    "outDir": "./dist",
    "rootDirs": ["./"],
    "jsx": "preserve",
    "importsNotUsedAsValues": "error",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@root/*": ["./*"],
      "@styles/*": ["src/styles/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["src/utils/*"],
      "@workers/*": ["workers/*"]
    },
    "types": ["cloudflare", "jest", "node"],
    "typeRoots": ["./**/node_modules/@types"],
    "lib": ["DOM", "DOM.Iterable"],
    "downlevelIteration": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
